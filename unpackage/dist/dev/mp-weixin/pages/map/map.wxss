.page-body {
  display: flex;
}
.page-body .page-section {
  position: fixed;
  top: 0;
  width: 100%;
}
.page-body .otherArea {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 1000rpx;
  overflow-y: hidden;
}
.page-body .otherArea .fixedArea {
  flex: 2;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
}
.page-body .otherArea .fixedArea .search {
  flex: 1;
  padding: 20rpx;
}
.page-body .otherArea .fixedArea .show-tabs {
  width: 100%;
  flex: 1;
  box-shadow: 0 5px 5px -5px #d8d8d8;
}
.page-body .otherArea .fixedArea .show-tabs .tabs-area {
  width: 60%;
}
.page-body .otherArea .shops {
  margin-top: 180rpx;
}
.page-body .routes {
  transition-duration: .5s;
  position: fixed;
  width: 100%;
  height: 500px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.page-body .routes .routes-head {
  height: 80rpx;
  display: flex;
  border-bottom: 5px solid #ccc;
}
.page-body .routes .routes-head .back-arrow {
  flex: 1;
  display: flex;
}
.page-body .routes .routes-head .back-arrow .arrow-icon {
  box-sizing: border-box;
  padding-left: 40rpx;
  align-self: center;
}
.page-body .routes .routes-head .route-tab {
  flex: 4;
}
.page-body .routes .routes-body {
  height: 200rpx;
}

