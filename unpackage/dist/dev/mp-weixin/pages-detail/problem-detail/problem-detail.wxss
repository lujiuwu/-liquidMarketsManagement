.problem-detail {
  padding-bottom: 200rpx;
  margin-bottom: 100rpx;
}
.problem-detail .preview-box {
  height: 100px;
  width: 100px;
  background-color: #fff;
}
.problem-detail .bg-image {
  position: relative;
  height: 350rpx;
  overflow: hidden;
}
.problem-detail .bg-image .problem_image {
  width: 100%;
  -webkit-filter: brightness(65%);
          filter: brightness(65%);
}
.problem-detail .bg-image .problem_title {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: #fff;
  font-size: 40rpx;
}
.problem-detail .bg-image .probelem_proof .proof {
  display: flex;
}
.problem-detail .bg-image .probelem_proof .proof .single_proof {
  width: 200rpx;
  height: 200rpx;
}
.problem-detail .bg-image .probelem_proof .preview-box {
  background-color: pink;
}
.problem-detail .detail_des .show_tabs {
  border-bottom: 1px solid #ccc;
}
.problem-detail .detail_massage {
  padding: 40rpx 20rpx;
}
.problem-detail .detail_massage .single_message {
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.problem-detail .detail_massage .single_message .message_name {
  font-weight: bold;
}
.problem-detail .detail_massage .single_message .message_content {
  padding-left: 6rpx;
}
.problem-detail .detail_massage .probelem_time,
.problem-detail .detail_massage .probelem_tags {
  border-bottom: 1px solid #ccc;
  padding-bottom: 20rpx;
  margin-bottom: 50rpx;
}
.problem-detail .detail_massage .probelem_tags {
  display: flex;
}
.problem-detail .detail_massage .probelem_tags .single-tag {
  color: #1d58c6;
  margin-right: 10rpx;
  background-color: #9bcef4;
  font-size: 30rpx;
}
.problem-detail .detail_massage .probelem_proof .proof {
  margin-top: 20rpx;
  display: flex;
}
.problem-detail .detail_massage .probelem_proof .proof .single_proof {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.problem-detail .detail_massage .probelem_proof .proof .single_proof .proof_image {
  width: 100%;
  height: 100%;
}
.problem-detail .map .page-section {
  width: 100%;
}
.problem-detail .solve-problem {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}

