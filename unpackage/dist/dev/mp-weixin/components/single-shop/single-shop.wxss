.goods {
  height: 250rpx;
  width: 100%;
  display: flex;
}
.goods .left {
  flex: 1;
  padding: 18rpx;
}
.goods .left .img {
  width: 100%;
  height: 100%;
}
.goods .right {
  padding-top: 20rpx;
  flex: 2;
  display: flex;
  flex-direction: column;
}
.goods .right .name {
  padding-left: 3rpx;
  margin-bottom: 4rpx;
  flex: 1;
  display: flex;
}
.goods .right .name .shop_name {
  flex: 2;
  font-size: 36rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  /* 超出部分省略号 */
  overflow: hidden;
  display: -webkit-box;
  /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical;
  /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 1;
  /** 显示的行数 **/
  word-break: break-all;
  /* break-all(允许在单词内换行。) */
}
.goods .right .name .sales {
  flex: 3;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.goods .right .comm {
  font-size: 26rpx;
  color: #00aaff;
  flex: 1;
  display: flex;
}
.goods .right .comm .rate {
  flex: 1;
  padding-top: 4rpx;
}
.goods .right .comm .number {
  flex: 12;
}
.goods .right .dis {
  font-size: 26rpx;
  color: #55aaff;
  flex: 1;
}
.goods .right .distance {
  font-size: 28rpx;
  flex: 2;
  display: flex;
}
.goods .right .distance .dis_dis {
  flex: 2;
}
.goods .right .distance .dis_icon {
  padding-top: 8rpx;
  flex: 3;
}

