.single-problem {
  border-radius: 10px;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  padding: 20rpx;
  margin-top: 30rpx;
}
.single-problem .first-line {
  height: 50rpx;
  display: flex;
  margin-bottom: 10rpx;
}
.single-problem .first-line .problem-shop {
  flex: 1;
  font-weight: bold;
  font-size: 36rpx;
}
.single-problem .first-line .problem-status {
  flex: 1;
  text-align: right;
  line-height: 50rpx;
  color: #1296db;
}
.single-problem .second-line {
  display: flex;
}
.single-problem .second-line .problem-image {
  flex: 1;
  margin-right: 20rpx;
}
.single-problem .second-line .problem-image .plm-image {
  width: 200rpx;
  height: 200rpx;
}
.single-problem .second-line .other-info {
  flex: 3;
  display: flex;
  flex-direction: column;
}
.single-problem .second-line .other-info .problem-title {
  font-weight: bold;
  font-size: 32rpx;
}
.single-problem .second-line .other-info .problem-code {
  margin-top: 36rpx;
  margin-bottom: 4rpx;
  font-size: 28rpx;
}
.single-problem .second-line .other-info .problem-address {
  display: flex;
}
.single-problem .second-line .other-info .problem-address .address-icon {
  flex: 1;
  display: flex;
}
.single-problem .second-line .other-info .problem-address .address-icon .icon {
  align-self: center;
}
.single-problem .second-line .other-info .problem-address .address-text {
  flex: 10;
  font-size: 26rpx;
}
.single-problem .second-line .other-info .problem-tags {
  margin-top: 14rpx;
  display: flex;
}
.single-problem .second-line .other-info .problem-tags .single-tag {
  color: #1d58c6;
  margin-right: 10rpx;
  background-color: #9bcef4;
  font-size: 28rpx;
}

